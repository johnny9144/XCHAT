.load.container {
  margin-top: 10%
}
.loginBlock {
  float: none;
  background: rgba( 0,0,0,0.7);
  color: white;
  padding: 40px;
  border-radius: 30px;
  .pass, .user {
    margin-bottom: 10px
  }
  .input-group: {
    margin-bottom: 30px;
  }
  .phone {
    padding: 0 0
    select {
      width: 20%
      float: left
    }
    input {
      width: 80%
      float: left
    }
  }
}

.btn {
  display: inline-block;
  border-radius: 2px;
  border: none;
  height: 45px;
  padding: 0;
  margin-top: 5px;
  margin-bottom: 5px;
}

.ghost {
  background-color: transparent;
  color: #F07444;
  border: 1px solid #F07444;
  transition: .2s ease;
  &:hover {
    background-color: #F07444;
    color: white;
    transition: .2s ease;
  }
}

.msg {
  color: red;
  font-size: 20px;
  margin-left: 50px;
  display: none;
}

